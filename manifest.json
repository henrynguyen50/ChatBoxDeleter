{
    "name": "Right To Censor",
    "description": "Delete chatboxes from illegal stream sites",
    "version": "8.0",
    "manifest_version": 3,

    "permissions": [
      "tabs"
    ],

    "host_permissions": [
            "https://streamed.su/watch/*",
            "https://streamed.st/watch/*",
            "https://streamed.pk/watch/*",
            "https://streami.su/watch/*",
            "https://the.streameast.app/*",
            "https://www.totalsportek100.com/*",
            "https://www.streameast.gd/*",
            "https://1stream.eu/*",
            "https://crackstreams.cx/live/*",
            "https://streameasttv.net/*",
            "https://720pstream.nu/*",
            "https://daddylive.mp/*",
            "https://ppv.wtf/live/*",
            "https://ppv.to/*",
            "https://ppvs.su/*",
            "https://techradan.com/*",
            "https://visualnewshub.com/*",
            "https://dailypudding.com/*",
            "https://methstreams.ing/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/RTC.png"
    },
    "icons": {
    "16": "images/RTC16.png",
    "32": "images/RTC32.png",
    "48": "images/RTC48.png",
    "128": "images/RTC128.png"
    },
    
    "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "matches": [
            "https://streamed.su/watch/*",
            "https://streamed.st/watch/*",
            "https://streamed.pk/watch/*",
            "https://streami.su/watch/*",
            "https://the.streameast.app/*",
            "https://www.totalsportek100.com/*",
            "https://www.streameast.gd/*",
            "https://1stream.eu/*",
            "https://crackstreams.cx/live/*",
            "https://streameasttv.net/*",
            "https://720pstream.nu/*",
            "https://daddylive.mp/*",
            "https://ppv.wtf/live/*",
            "https://ppv.to/*",
            "https://ppvs.su/*",
            "https://techradan.com/*",
            "https://visualnewshub.com/*",
            "https://dailypudding.com/*",
            "https://methstreams.ing/*"
        ]
      }  
    ],
    
    "background": {
        "service_worker": "scripts/background.js"
    }
    

  }